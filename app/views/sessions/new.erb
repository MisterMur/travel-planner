<div class="container">

  <div class="d-flex justify-content-center h-100">
    <h4><%= flash[:notice] %></h4>
  </div>

	<div class="d-flex justify-content-center h-100">

		<div class="card">
			<div class="card-header">
				<h3>Sign In</h3>
			</div>
			<div class="card-body">
				<%= form_tag(login_path) do %>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
            <%= text_field_tag :username, nil, placeholder: '  username' %>

					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
            <%= text_field_tag :password, nil, placeholder: '  password' %>
					</div>

					<div class="form-group">
            <%= submit_tag 'Login', class: "btn float-left login_btn" %>
            <%= button_to "Create Account", new_user_path, method: "get", class: "btn float-right login_btn" %>
					</div>
				<% end %>
			</div>
			<div class="card-footer">
			</div>
		</div>
	</div>
</div>
