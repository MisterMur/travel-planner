<h2><%= @activity.name %></h2>

  <iframe width="600" height="450" frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/search?q=<%= @search%>%20<%=@activity.format_address_for_search %>&key=AIzaSyBcF7WmTnqaJVXqW1u4Z2rhHEjOeiaNRtg" allowfullscreen></iframe>
  <ul>

<% if @activity.photo_url != "Photo Unavailable"%>
  <img src="<%= @activity.photo_url %>" alt="Photo Unavailable">
<% end %>

<h4>Name: <%= @activity.name %> </h4>
<h4>Address: <%= @activity.address %> </h4>
<% if !!@activity.rating %>
  <h4>Rating: <%= @activity.rating %> </h4>
<% end %>

<% if !!@activity.price_level %>
  <h4>Price Level: <%= @activity.price_level %> </h4>
<% end %>


<% if @activity.trips.include?(@trip) %>
  <h4>You're headed there on <%= @trip_activity.date %>!</h4>
  <p><%= button_to "Delete from itinerary", @activity, method: :delete, params: {trip_id: @trip.id, activity_id: @activity.id} %>
  <%= button_to "Back to trip", @trip, method: :get %></p>
<% elsif !!@trip%>
    <%= button_to "Add to itinerary", activities_add_to_trip_path, method: :post, params: {trip_id: @trip.id, activity_id: @activity.id, date: @date.to_s} %>
    <%= button_to "Return to activities", activities_path, params: {trip_id: @trip.id, search: @search, date: @date.to_s}, method: :get %>
<% else %>
  <%= button_to "Return to #{@search}", destination_path(@activity.destination_id), params: {search: @search}, method: :get %>
<% end %>

