<h1><%= @activity.name %></h1>

<img src="<%= @activity.photo_url %>" alt="Photo Unavailable">

<h3>Name: <%= @activity.name %> </h3>
<h3>Address: <%= @activity.address %> </h3>
<h3>Rating: <%= @activity.rating %> </h3>
<h3>Price: <%= @activity.price_level %> </h3>


<% if @activity.trips.include?(@trip) %>
  <%= button_to "Delete from itinerary", @activity, method: :delete, params: {trip_id: @trip.id, activity_id: @activity.id} %>
<% else %>
  <% if !!@trip%>
    <%= button_to "Add to itinerary", activities_add_to_trip_path, method: :post, params: {trip_id: @trip.id, activity_id: @activity.id, date: @date} %>
  <% end %>
<% end %>

