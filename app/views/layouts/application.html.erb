<!DOCTYPE html>
<html>
  <head>
    <title>TravelPlanner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if logged_in? %>
      <%= link_to "Logout", sessions_path, method: :delete%> |
      <%= link_to "My Trips", user_path(User.find_by(id: session[:user_id])), method: :get %> |
      <%= link_to "Explore Destinations", destinations_path, method: :get %>
    <% else %>
      <%= link_to "Login", login_path, method: :get%>
    <% end %>

    <%= yield %>
  </body>
</html>
