<!DOCTYPE html>
<html>
  <head>
    <title>TravelPlanner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if logged_in? %>
      <div class="">
        Currently logged in as <%= current_user.to_s %> |
        <%= link_to "Logout", sessions_path, method: :delete%> |
        <%= link_to "Edit Profile", edit_user_path(current_user.id), method: :get%> |
        <%= link_to "My Trips", user_path(current_user.id), method: :get %> |
        <%= link_to "Explore Destinations", destinations_path, method: :get %>
      </div>
    <% else %>
      <%= link_to "Login", login_path, method: :get%>
    <% end %>

    <%= yield %>
  </body>
</html>
